<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="1dp"
    android:background="@mipmap/penpaper"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    </LinearLayout>

    <TextView
        android:id="@+id/incomelist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/home_textviewstyle"
        android:text="Income List"/>

    <TextView
        android:id="@+id/income"
        style="@style/home_textviewstyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remaining income:" />

    <TextView
        android:id="@+id/remincome"
        style="@style/home_textviewstyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/addincome"
            style="@style/home_textviewstyle"
            android:text=" +  Add income" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignLeft="@id/addincome"
            android:layout_alignRight="@id/addincome"
            android:layout_below="@id/addincome"
            android:background="#000" />

    </RelativeLayout>


</LinearLayout>